<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="-3dp"
    android:layout_marginEnd="-3dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp"
    android:padding="3dp"
    android:background="@drawable/my_button_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D1E22"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D1E22"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profile_image"
                android:layout_margin="5dp"
               />

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="Username"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="200dp"
                android:textColor="#EE9914"/>




        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                android:padding="5dp"
                android:id="@+id/post_image"
                tools:ignore="MissingConstraints,MissingConstraits"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#1D1E22"
                android:src="@drawable/ic_save_foreground"
                android:layout_alignParentStart="true"
                android:id="@+id/save"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/save"
                android:id="@+id/more"
                android:src="@drawable/ic_delete_foreground"></ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/my_button_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Make"
                android:background="#1D1E22"
                android:id="@+id/Text_make"
                android:textColor="#696969"></TextView>

        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="#1D1E22"
            android:id="@+id/make"
            android:textColor="#EE9914"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Model"
                android:background="#1D1E22"
                android:id="@+id/Text_model"
                android:textColor="#696969"></TextView>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:padding="3dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/model"
            android:textColor="#EE9914"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:background="#1D1E22"
                android:id="@+id/Text_price"
                android:textColor="#696969"></TextView>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:layout_width="wrap_content"
            android:padding="3dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/price"
            android:textColor="#EE9914"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Year"
                android:background="#1D1E22"
                android:id="@+id/Text_year"
                android:textColor="#696969"></TextView>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:layout_width="wrap_content"
            android:padding="3dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/year"
            android:textColor="#EE9914"/>


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Color"
                android:background="#1D1E22"
                android:id="@+id/Text_color"
                android:textColor="#696969"></TextView>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:padding="3dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/color"
            android:textColor="#EE9914"/>


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:background="#1D1E22"
                android:id="@+id/Text_desc"
                android:textColor="#696969"></TextView>
        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:padding="3dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/Description11"
            android:textColor="#EE9914"/>


    </LinearLayout>




    </LinearLayout>

</RelativeLayout>